<script>
    const add = document.getElementById('add')
    add.addEventListener('click', () => {
        addEmailInput()
    })

    var count = "a"
    var count2 = "b"

    function addEmailInput() {
        var foo = document.getElementById("fooBar");

        var z = document.createElement("div");
        z.setAttribute("class", "inputs-addtnl")
        z.setAttribute("id", count2 + "c")
        foo.appendChild(z);

        foo = document.getElementById(count2 + "c");

        var x = document.createElement("INPUT");
        x.setAttribute("type", "email");
        x.setAttribute("name", "email");
        x.setAttribute("id", count);

        var y = document.createElement("DIV");
        y.setAttribute("onclick", `deleteEmailInput("${count}", "${count2}")`)
        y.setAttribute("id", count2)
        y.setAttribute("class", "remove-button")

        const node = document.createTextNode("‚ùå");
        y.appendChild(node)
        count = count + "a";
        count2 = count2 + "b";
        foo.appendChild(x);
        foo.appendChild(y)
    }

    function deleteEmailInput(counter, counter2) {
        var element = document.getElementById(counter);
        element.remove()
        var element2 = document.getElementById(counter2);
        element2.remove()

        // console.log(document.getElementById(counter2))   
        // console.log(counter2, typeof counter2)
    }


    const sendLenButton = document.getElementById("schLoginBtn")
    function sendLen() {
        var x = document.createElement("INPUT");
        x.setAttribute("type", "text");
        x.setAttribute("value", count);
        x.setAttribute("id", "noDisplay")
        x.setAttribute("style", "visibility: hidden")
        x.setAttribute("name", count)
        document.body.appendChild(x)
    }

</script>